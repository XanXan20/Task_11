<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Задание 13"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/arg1_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Сторона1"
                    android:inputType="numberSigned"/>

                <EditText
                    android:id="@+id/arg2_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Сторона2"
                    android:inputType="numberSigned"/>

                <EditText
                    android:id="@+id/arg3_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Сторона3"
                    android:inputType="numberSigned"/>

                <Button
                    android:id="@+id/button_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вычислить периметр"
                    android:onClick="click_13"/>


                <TextView
                    android:id="@+id/answ1_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Периметр: "
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/answ2_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Площадь: "
                    android:textAlignment="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Задание 14"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/arg1_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:hint="Число1" />

                <EditText
                    android:id="@+id/arg2_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:hint="Число2"  />

                <EditText
                    android:id="@+id/arg3_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:hint="Число3"  />

                <Button
                    android:id="@+id/button_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вычислить: "
                    android:onClick="click_14"/>

                <TextView
                    android:id="@+id/answ1_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Максимум: "
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/answ2_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Минимум: "
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/answ3_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ср. Арифм.: "
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/answ4_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ср. Геом.: "
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Задание 15"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/arg1_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:hint="Число"/>
                <Button
                    android:id="@+id/button_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вычислить: "
                    android:onClick="click_15"/>
                <TextView
                    android:id="@+id/answ1_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сумма цифр: "
                    android:textAlignment="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Задание 16"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp" />
                <EditText
                    android:id="@+id/arg1_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:hint="X1"/>
                <EditText
                    android:id="@+id/arg2_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:hint="Y1"/>
                <EditText
                    android:id="@+id/arg3_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:hint="X2"/>
                <EditText
                    android:id="@+id/arg4_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:hint="Y2"/>
                <Button
                    android:id="@+id/button_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вычислить"
                    android:onClick="click_16"/>
                <TextView
                    android:id="@+id/answ1_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>